# ===========================================
# VOALIVE (ReservaSegura) - PRODUCTION
# ===========================================

# NODE ENVIRONMENT
NODE_ENV=production

# DATABASE (PostgreSQL) - Production
DATABASE_URL=postgresql://reservasegura_user:reservasegura_pass_prod_2024@postgres:5432/reservasegura

# REDIS CACHE - Production
REDIS_URL=redis://:reservasegura_redis_2024@redis:6379

# ===========================================
# FLIGHT TRACKING APIS - REAL DATA ONLY
# ===========================================

# AVIATIONSTACK API (Primary)
# Free tier: 100 requests/month
# Provides: Flight status, schedules, historical data
AVIATIONSTACK_API_KEY=50e337585fbf093ffbee426c270e82e3

# AIRLABS API (Secondary/Backup)
# Get your API key at: https://airlabs.co/
# Free tier: Limited requests per month
# Provides: Real-time flight tracking, schedules, live positions
AIRLABS_API_KEY=

# FIRECRAWL API (Web Scraping - Fallback)
FIRECRAWL_API_KEY=fc-2dda7f7f0e2c4ccb816cb21e7f372410

# ===========================================
# SCRAPER & AUTOMATION
# ===========================================

AUTO_START_SCRAPER=true
LOG_LEVEL=info

# ===========================================
# WHATSAPP NOTIFICATIONS
# ===========================================

# WhatsApp API Configuration
# Providers suportados: evolution, baileys, business, custom
WHATSAPP_PROVIDER=evolution
WHATSAPP_API_URL=http://localhost:8080
WHATSAPP_API_TOKEN=your_whatsapp_api_token_here
WHATSAPP_INSTANCE=reservasegura

# Habilitar notificações WhatsApp
WHATSAPP_ENABLED=false

# Custom endpoint (se WHATSAPP_PROVIDER=custom)
# WHATSAPP_CUSTOM_ENDPOINT=/send

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================

# JWT Secret (Production - Ultra Secure)
JWT_SECRET=reservasegura_jwt_secret_prod_2024_ultra_secure

# NextAuth Configuration (Production)
NEXTAUTH_SECRET=reservasegura_nextauth_secret_prod_2024
NEXTAUTH_URL=https://www.reservasegura.pro

# ===========================================
# API CONFIGURATION
# ===========================================

# Backend API Port
PORT=4000

# Public API URL (Frontend calls)
NEXT_PUBLIC_API_URL=https://www.reservasegura.pro

# ===========================================
# PRODUCTION SETTINGS
# ===========================================

# Disable telemetry in production
NEXT_TELEMETRY_DISABLED=1

# Enable production optimizations
NEXT_OPTIMIZE=true

# ===========================================
# MONITORING & OBSERVABILITY
# ===========================================

# Enable production monitoring
ENABLE_METRICS=true
ENABLE_HEALTH_CHECK=true

# Sentry (Error Tracking) - Optional
# SENTRY_DSN=your_sentry_dsn_here
# SENTRY_ENVIRONMENT=production

# ===========================================
# NOTES
# ===========================================
# 1. This is the PRODUCTION environment file
# 2. ALL DATA must be REAL - NO MOCKS
# 3. APIs are configured for real flight data only
# 4. Secrets are production-grade
# 5. Monitoring is enabled by default

# ==========================================
# SISTEMA DE MONITORAMENTO - WEBHOOKS
# ==========================================

# URL do webhook para notificações de mudança de status
WEBHOOK_URL=https://www.reservasegura.pro/api/webhooks/booking-status

# Secret para assinatura HMAC (mantenha seguro!)
WEBHOOK_SECRET=voalive_webhook_secret_2024_ultra_secure_key

# Configurações de scraping
SCRAPING_TIMEOUT=30000
MAX_RETRIES=3
HEADLESS=true
