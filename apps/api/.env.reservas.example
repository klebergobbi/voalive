# ==========================================
# CONFIGURAÇÃO DO SISTEMA DE MONITORAMENTO
# DE RESERVAS AÉREAS
# ==========================================

# ============ REDIS ============
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============ PROXY ============
# Opções: brightdata, oxylabs, smartproxy, none
PROXY_PROVIDER=none
PROXY_USERNAME=
PROXY_PASSWORD=
# Rotaciona proxy a cada N requisições
PROXY_ROTATION_INTERVAL=5

# ============ PLAYWRIGHT ============
# true = sem interface gráfica (recomendado para produção)
PLAYWRIGHT_HEADLESS=true
# Timeout padrão em milissegundos
PLAYWRIGHT_TIMEOUT=30000
# Máximo de browsers simultâneos
MAX_CONCURRENT_BROWSERS=5
# Slow motion em ms (0 = desabilitado)
PLAYWRIGHT_SLOW_MO=0

# ============ SEGURANÇA ============
# Chave de 32 caracteres para criptografia AES-256
# IMPORTANTE: Mude para uma chave única em produção
ENCRYPTION_KEY=sua_chave_32_caracteres_aqui!

# ============ GERAL ============
NODE_ENV=development
LOG_LEVEL=info

# URL do frontend para CORS no Socket.io
FRONTEND_URL=http://localhost:3011

# ==========================================
# CONFIGURAÇÕES OPCIONAIS
# ==========================================

# ============ BULL QUEUE ============
# Intervalo de verificação em minutos (padrão: 10)
RECHECK_INTERVAL_MINUTES=10

# Máximo de falhas antes de circuit breaker (padrão: 5)
MAX_CONSECUTIVE_FAILURES=5

# ============ RATE LIMITING ============
# Máximo de jobs por segundo (padrão: 2)
MAX_JOBS_PER_SECOND=2

# ============ MONITORING ============
# Intervalo de emissão de status da fila em segundos (padrão: 30)
QUEUE_STATUS_INTERVAL=30
